<Window x:Class="XboxInputMapper.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d"
		Title="Xbox 2 Android" Width="275" Height="250" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" FontFamily="Segoe UI" FontSize="12" Icon="Program.ico"
		Loaded="MainWindow_Loaded" Closing="MainWindow_Closing" StateChanged="MainWindow_StateChanged">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<StackPanel Orientation="Vertical" Grid.RowSpan="2">
			<TextBlock HorizontalAlignment="Left" Margin="10,10,0,2" Text="ADB Path"/>
			<Grid Margin="10,2,10,5" >
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>
				<TextBox x:Name="textAdbPath" HorizontalAlignment="Stretch" Height="23" VerticalContentAlignment="Center" />
				<Button x:Name="btnRefresh" Grid.Column="1" Width="25" Margin="5,0,0,0" Click="btnRefresh_Click">
					<Button.Content>
						<Image Source="Refresh.png" />
					</Button.Content>
				</Button>
			</Grid>
			
			<ComboBox x:Name="comboDevices" Margin="10,5,10,5" Height="23" SelectionChanged="comboDevices_SelectionChanged" />

			<Grid Margin="10,5,10,5">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<TextBlock Text="Input Event" VerticalAlignment="Center" />
				<TextBox x:Name="textInputEvent" Grid.Column="1" Height="23" VerticalContentAlignment="Center" Margin="5,0,0,0" IsReadOnly="True" />
			</Grid>

			<Grid Margin="10,5,10,5">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>
				<TextBlock Text="Trigger Mode" VerticalAlignment="Center" />
				<ComboBox x:Name="comboTriggerMode" Grid.Column="1" Margin="5,0,0,0" Height="23" SelectionChanged="comboTriggerMode_SelectionChanged">
					<ComboBox.Items>
						<ComboBoxItem Content="Trigger Happy A" />
						<ComboBoxItem Content="Trigger Happy B" />
						<ComboBoxItem Content="Double Harmony" />
						<ComboBoxItem Content="Double Harmony Frenzy!!" />
						<ComboBoxItem Content="Triple Triplet" />
						<ComboBoxItem Content="Triple Triplet Triangle!!" />
					</ComboBox.Items>
				</ComboBox>
			</Grid>
			
			<CheckBox x:Name="checkReverseAxis" HorizontalAlignment="Left" Margin="10,5,0,5" Content="Reverse Axis" Checked="checkReverseAxis_CheckedChanged" Unchecked="checkReverseAxis_CheckedChanged"/>
		</StackPanel>

		<Button Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Width="120" Height="23" Content="Touch Profile" Click="btnTouchProfile_Click"/>
	</Grid>
</Window>
